<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DetailRiwayatPeriksaActivity"
    android:id="@+id/coordinatorRoot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo3"
                    android:layout_marginStart="20dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/akreditasi"
                    android:layout_marginStart="60dp"/>


            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_titlebook"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@id/rel_toolbar"
            android:layout_marginBottom="3dp"
            android:background="@color/colorPrimaryDark"
            >
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Pendaftaran"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/bookmanoldstyle"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_container"
            android:layout_below="@id/rel_titlebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lin_Antrian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_template"
                android:layout_margin="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Antrian"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textView_noAntrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAS-1"
                    android:textColor="@android:color/black"
                    android:textSize="80sp"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_data"
                android:layout_below="@id/lin_Antrian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_template">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kode Booking"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/textView_KodeBoking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2020202020202"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGREY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Pasien"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/textView_namapasien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yoga Wahyu Yuwono"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGREY"
                       />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jam Dilayani"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/textView_jampelayanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2020-20-20 13.00"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGREY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Poli"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/textView_namaPoli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Poli Spesialis Anak"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGREY"
                       />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dokter"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/textView_namaDokter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fresti Oktanindi, dr., M.Sc., Sp.A"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGREY"
                       />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_batalDaftar"
                android:layout_below="@id/lin_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batalkan Pendaftaran"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/bookmanoldstyle"
                android:background="@drawable/bg_templatered"/>
            <Button
                android:id="@+id/btn_halamanUtama"
                android:layout_below="@id/btn_batalDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kehalaman utama"
                android:fontFamily="@font/bookmanoldstyle"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_templategreens"/>


        </RelativeLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.JadwalSholatActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo3"
                    android:layout_marginStart="20dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/akreditasi"
                    android:layout_marginStart="60dp"/>


            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_titlebook"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@id/rel_toolbar"
            android:background="@color/colorPrimaryDark"
            >
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jadwal Sholat"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/bookmanoldstyle"
                android:textColor="@android:color/white"
                />


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lin_ket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_titlebook"
            android:orientation="horizontal"
            android:background="@drawable/bg_templategreens"
            android:layout_marginBottom="3dp">
            <TextView
                android:id="@+id/tv_typesurah"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="Banyumas,"
                android:textColor="@android:color/white"
                android:fontFamily="@font/bookmanoldstyle"
                android:gravity="right"
                android:paddingTop="10dp"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:id="@+id/tv_translation"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Jumat 05 Juni 2020"
                android:textColor="@android:color/white"
                android:fontFamily="@font/bookmanoldstyle"
                android:gravity="left"
                android:paddingTop="10dp"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/surah_recylcer"
            android:layout_below="@id/lin_ket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
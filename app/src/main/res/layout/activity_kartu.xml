<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".View.KartuActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <ImageView
                android:id="@+id/backimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/logo3"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/akreditasi"
                android:layout_marginStart="60dp"/>


        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_home"
            android:layout_below="@id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_template"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="13dp"
                android:elevation="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"

                >
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimer_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    shimmer:duration="800">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:background="@drawable/bg_templategreens">
                            <TextView
                                android:id="@+id/kartupasienTV"
                                android:layout_width="375dp"
                                android:layout_height="75dp"
                                android:text="Kartu Pasien"
                                android:textSize="34sp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:layout_marginTop="8dp"
                                android:gravity="center_horizontal"/>
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/kartupasienTV"
                                android:src="@drawable/logo3"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@drawable/bg_template"
                            android:layout_marginTop="4dp">
                            <LinearLayout
                                android:id="@+id/lin_rm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/norekammedis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No Rekam Medis "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/norekammedis1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123456789"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lin_nama"
                                android:layout_below="@id/lin_rm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/fieldnama"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nama "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="95dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/namakartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yoga Wahyu Yuwono"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_alamat"
                                android:layout_below="@id/lin_nama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="8dp">
                                <TextView
                                    android:id="@+id/fieldalamat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Alamat :"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginLeft="80dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/alamatkartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kalilandak RT01/03 Purworejo-Klampok Banjarnegara"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="left"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_tgllahir"
                                android:layout_below="@id/linear_alamat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/fieldtgllahir"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tanggal Lahir :"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="28dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/tgllahirkartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28 Juli 1998"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_nik"
                                android:layout_below="@id/linear_tgllahir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/fieldnik"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NIK "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="110dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/nikkartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123456789"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_typepasien"
                                android:layout_below="@id/linear_nik"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/fieldtype"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pasien "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="87dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/typePasien"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BPJS"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_qrcode"
            android:layout_below="@id/linear_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan QR Code"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bookmanoldstyle"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageqrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo3"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".View.KartuBpjsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <ImageView
                android:id="@+id/backimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/logo3"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/akreditasi"
                android:layout_marginStart="60dp"/>


        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_home"
            android:layout_below="@id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_template"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="13dp"
                android:elevation="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"

                >
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimer_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    shimmer:duration="800">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:background="#09836c"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/logogaruda"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                            />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:text="Kartu Indonesia Sehat"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:textColor="@android:color/white"
                                android:textSize="30sp"
                                android:gravity="center_vertical"/>
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/bpjs"
                                android:layout_marginTop="8dp"/>



                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_template"
                            android:layout_marginTop="4dp">
                            <ImageView
                                android:id="@+id/imageView_barcode"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:src="@drawable/bpjs"
                                android:layout_marginLeft="50dp"/>
                            <LinearLayout
                                android:layout_below="@id/imageView_barcode"
                                android:layout_width="500dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="8dp">
                            <LinearLayout
                                android:id="@+id/lin_rm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/nokartubpjs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No Kartu "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="69dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/nokartubpjs1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123456789"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lin_nama"
                                android:layout_below="@id/lin_rm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/fieldnama"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nama "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="95dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/namakartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rumah Sakit Islam Purwokerto"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_alamat"
                                android:layout_below="@id/lin_nama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="8dp">
                                <TextView
                                    android:id="@+id/fieldalamat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Alamat :"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginLeft="80dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/alamatkartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jl. Mashuri No.39, Kalibogor, Rejasari, Kec. Purwokerto Bar., Kabupaten Banyumas, Jawa Tengah 53134"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="left"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_tgllahir"
                                android:layout_below="@id/linear_alamat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/fieldtgllahir"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tanggal Lahir :"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="28dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/tgllahirkartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28 Juli 1998"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_nik"
                                android:layout_below="@id/linear_tgllahir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp">
                                <TextView
                                    android:id="@+id/fieldnik"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NIK "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="110dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/nikkartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123456789"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_faskes"
                                android:layout_below="@id/linear_nik"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="50dp"
                                android:layout_marginBottom="8dp"
                                >
                                <TextView
                                    android:id="@+id/fieldfaskes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Faskes "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="84dp"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/faskeskartu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RSI Purwokerto"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
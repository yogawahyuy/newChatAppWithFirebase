        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:layout_marginTop="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="1dp"
                android:elevation="100dp"
                android:divider="@android:color/black"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="12dp"


                >
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                shimmer:duration="800">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp">
                <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:met_floatingLabel="normal"
                            android:inputType="textEmailAddress"
                            android:hint="Masukan Email (user@email.com)"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:gravity="left"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/bookmanoldstyle" />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            app:met_floatingLabel="normal"
                            android:inputType="textPassword"
                            android:hint="Masukan Password"
                            android:textSize="14sp"
                            android:gravity="left"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/bookmanoldstyle"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Login"
                            android:id="@+id/btnlogin"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="#fff"
                            android:fontFamily="@font/bookmanoldstyle"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"/>
                    <LinearLayout
                        android:id="@+id/lin_lupaPassword"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lupa Password ?"
                            android:fontFamily="@font/bookmanoldstyle"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:id="@+id/lin_goto_daftar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Belum Punya Akun?"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Daftar Sekarang"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="14sp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:gravity="left"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
            <LinearLayout
                android:layout_below="@id/lin_utama"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="180dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="designed by YWY &amp; DKW"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/bookmanoldstyle"
                    android:textStyle="italic"
                    android:textSize="12sp"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.StatusBookingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo3"
                    android:layout_marginStart="20dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/akreditasi"
                    android:layout_marginStart="60dp"/>


            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_titlebook"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@id/rel_toolbar"
            android:layout_marginBottom="3dp"
            android:background="@color/colorPrimaryDark"
            >
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Pendaftaran"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/bookmanoldstyle"
                android:textColor="@android:color/white"
                />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_Antrian"
            android:layout_below="@id/rel_titlebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_template"
            android:layout_margin="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Antrian Anda"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bookmanoldstyle"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/noAntrian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A3"
                android:gravity="center"
                android:textSize="150sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bookmanoldstyle"/>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/Konfirmasi"-->
<!--                android:gravity="center"-->
<!--                android:textColor="@android:color/black"-->
<!--                android:fontFamily="@font/bookmanoldstyle"-->
<!--                android:textSize="16sp"-->
<!--                android:paddingLeft="8dp"/>-->

                <TextView
                    android:id="@+id/kata_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silahkan Datang Ke Rumah Sakit Islam Purwokerto Pada Tanggal 21/09/2020 Untuk Konfirmasi Pendaftaran"
                    android:fontFamily="@font/bookmanoldstyle"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btn_halamanUtama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ke Halaman Utama"
                android:background="@drawable/bg_templategreens"
                android:layout_margin="16dp"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
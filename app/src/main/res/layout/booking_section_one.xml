<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titel_nosep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. SEP"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_below="@id/titel_nosep"
            android:id="@+id/isi_nosep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"/>
        <View
            android:id="@+id/view_sep"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="@color/colorGREY"
            android:layout_below="@id/isi_nosep"/>
        <TextView
            android:id="@+id/titel_booking"
            android:layout_below="@id/view_sep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Booking"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_below="@id/titel_booking"
            android:id="@+id/isi_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
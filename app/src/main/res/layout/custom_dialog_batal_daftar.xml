<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pembatalan Pendaftaran Dapat Dilakukan H-1 Dari Jadwal Pemeriksaan"
        android:fontFamily="@font/bookmanoldstyle"
        android:textColor="@android:color/black"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Booking"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bookmanoldstyle"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textView_KodeBoking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020202020202"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bookmanoldstyle"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Pembatalan"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bookmanoldstyle"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textView_tanggalPembatalan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="28/12/2020"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bookmanoldstyle"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alasan Pembatalan"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bookmanoldstyle"
            android:textStyle="bold"/>
       <EditText
           android:id="@+id/edtPembatalan"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/bookmanoldstyle"
           />
    </LinearLayout>

    <Button
        android:id="@+id/btn_dialogbataldaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Batalkan Pendaftaran"
        android:background="@drawable/bg_templatered"
        android:layout_margin="16dp"/>

</LinearLayout>
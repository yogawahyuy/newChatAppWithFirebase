<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    tools:context=".Fragments.UsersFragment"
   >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/bg_atas">
      <RelativeLayout
          android:id="@+id/box_photo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          >

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/profile_picture"
          android:layout_width="130dp"
          android:layout_height="130dp"
         android:layout_centerInParent="true"
         android:src="@drawable/logobulet"/>
      </RelativeLayout>
      <RelativeLayout
         android:id="@+id/box_data"
          android:layout_marginTop="8dp"
         android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/box_photo"
          android:padding="10dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_template">
            <RelativeLayout
                android:id="@+id/page_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

               <ImageView
                   android:id="@+id/icon_nama"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/icons8name96"/>

               <TextView
                   android:id="@+id/textnama"
                   android:layout_toRightOf="@id/icon_nama"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="24dp"
                   android:layout_marginTop="6dp"
                   android:text="Rsi Purwokerto"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:typeface="normal"
                   android:fontFamily="@font/bookmanoldstyle"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="40dp"
                   android:background="@color/colorGREY"
                   android:layout_below="@id/icon_nama"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/page_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/page_nama"
               android:padding="10dp">
               <ImageView
                  android:id="@+id/icon_email"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/icons8email64"/>
               <TextView
                   android:id="@+id/textemail"
                  android:layout_toRightOf="@id/icon_email"
                  android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                  android:layout_marginLeft="24dp"
                  android:layout_marginTop="6dp"
                  android:text="rsipurwokerto@gmail.com"
                  android:textSize="14sp"
                  android:textStyle="bold"
                  android:typeface="normal"
                   android:fontFamily="@font/bookmanoldstyle"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="40dp"
                  android:background="@color/colorGREY"
                  android:layout_below="@id/icon_email"/>

            </RelativeLayout>
            <RelativeLayout
               android:id="@+id/page_numberphone"
               android:layout_below="@id/page_jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:padding="10dp">

               <ImageView
                   android:id="@+id/icon_numberphone"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/icons8numberpad100"/>

               <TextView
                   android:id="@+id/texthp"
                   android:layout_toRightOf="@id/icon_numberphone"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="24dp"
                   android:layout_marginTop="6dp"
                   android:text="-"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:typeface="normal"
                   android:fontFamily="@font/bookmanoldstyle"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="40dp"
                   android:background="@color/colorGREY"
                   android:layout_below="@id/icon_numberphone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/page_jk"
                android:layout_below="@id/page_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

               <ImageView
                   android:id="@+id/icon_jk"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/icons8nursemale80"/>

               <TextView
                   android:layout_toRightOf="@id/icon_jk"
                   android:id="@+id/textjk"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="24dp"
                   android:layout_marginTop="6dp"
                   android:text="IT (information technologies)"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:typeface="normal"
                   android:fontFamily="@font/bookmanoldstyle"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="40dp"
                   android:background="@color/colorGREY"
                   android:layout_below="@id/icon_jk"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/page_alamat"
                android:layout_below="@id/page_numberphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

               <ImageView
                   android:id="@+id/icon_alamat"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/icons8address96"/>

               <TextView
                   android:id="@+id/textalamat"
                   android:layout_toRightOf="@id/icon_alamat"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="24dp"
                   android:layout_marginTop="6dp"
                   android:text="-"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:typeface="normal"
                   android:fontFamily="@font/bookmanoldstyle"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="40dp"
                   android:background="@color/colorGREY"
                   android:layout_below="@id/icon_alamat"/>
            </RelativeLayout>
         </RelativeLayout>

      </RelativeLayout>
      <Button
         android:id="@+id/edit_profilebtn"
         android:layout_below="@id/box_data"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:text="Edit Profile"
         android:background="@drawable/bg_templateyellow"
         android:textColor="@android:color/black"
         android:layout_marginTop="10dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:fontFamily="@font/bookmanoldstyle"/>

      <Button
          android:id="@+id/logout_profilebtn"
          android:layout_below="@id/edit_profilebtn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Log Out"
          android:background="@drawable/bg_templatered"
          android:textColor="@android:color/white"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:fontFamily="@font/bookmanoldstyle"/>


      <LinearLayout
         android:layout_below="@id/logout_profilebtn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="8dp"
          android:orientation="vertical"
          >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:text="Mobile RSI"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bookmanoldstyle"
            android:gravity="center"/>
         <TextView
             android:id="@+id/textViewVersiAPP"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:text="Versi Aplikasi 1.0"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bookmanoldstyle"
            android:gravity="center"
             android:layout_marginTop="8dp"/>
         <TextView
             android:id="@+id/textViewTentangAplikasi"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Tentang Aplikasi"
             android:textColor="@android:color/black"
             android:fontFamily="@font/bookmanoldstyle"
             android:gravity="center"
             android:textStyle="bold"
             android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="YWY &amp; DKW"
             android:textColor="@android:color/black"
             android:gravity="center"
             android:textSize="14sp"
             android:textStyle="italic|bold"/>


      </LinearLayout>

<!--      <TextView-->
<!--         android:layout_below="@id/logout_profilebtn"-->
<!--         android:id="@+id/app_version"-->
<!--          android:layout_width="match_parent"-->
<!--          android:layout_height="wrap_content"-->
<!--         android:text="APP VERSION"/>-->
   </RelativeLayout>
</ScrollView>

</RelativeLayout>
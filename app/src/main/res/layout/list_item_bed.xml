<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/bg_template">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear_kelas"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:id="@+id/textView_namakelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VVIP"
                android:textSize="15sp"
                android:fontFamily="@font/bookmanoldstyle"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/textView_sisabed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/linear_kelas"
            android:id="@+id/linear_icon"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icons8hospitalbed80"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total kamar"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/riwayatpemeriksaan2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terpakai"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Terakhir"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/linear_icon"
            android:id="@+id/linear_hasil"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_totalkamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/textView_sisatersedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/textView_lastupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/04/2020 19:50"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:padding="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear_kelas"
            android:layout_width="110dp"
            android:layout_height="98dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/bg_templategreens"
            >
            <TextView
                android:id="@+id/textView_noantrians"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HBK-1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_title"
            android:layout_toRightOf="@id/linear_kelas"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/antrian"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pasien"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icons8doctormale96"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poli"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelayanan"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>


<!--            <TextView-->
<!--                android:id="@+id/item_txt_title"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text=""-->
<!--                android:textColor="#212121"-->
<!--                android:textSize="14dp" />-->

<!--            <TextView-->
<!--                android:id="@+id/item_txt_message"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:text=""-->
<!--                android:textColor="#727272"-->
<!--                android:textSize="14dp" />-->

        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/lin_title"
            android:id="@+id/linear_hasil"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_namapasien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIRTA INDRA WIBOWO"

                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/textView_namaPoli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poli Spesialis Anak"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textView_jampelayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/04/2020 19:50"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>


